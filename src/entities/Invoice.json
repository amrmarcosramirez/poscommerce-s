{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "invoice_number": {
      "type": "string",
      "description": "N\u00famero de factura"
    },
    "sale_id": {
      "type": "string",
      "description": "ID de la venta asociada"
    },
    "customer_id": {
      "type": "string",
      "description": "ID del cliente"
    },
    "customer_name": {
      "type": "string",
      "description": "Nombre del cliente"
    },
    "customer_dni_cif": {
      "type": "string",
      "description": "DNI/CIF del cliente"
    },
    "customer_address": {
      "type": "string",
      "description": "Direcci\u00f3n del cliente"
    },
    "invoice_date": {
      "type": "string",
      "format": "date",
      "description": "Fecha de emisi\u00f3n"
    },
    "store_id": {
      "type": "string",
      "description": "ID de la tienda emisora"
    },
    "items": {
      "type": "array",
      "description": "L\u00edneas de factura",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "iva_rate": {
            "type": "number"
          },
          "subtotal": {
            "type": "number"
          }
        }
      }
    },
    "base_imponible": {
      "type": "number",
      "description": "Base imponible (sin IVA)"
    },
    "total_iva": {
      "type": "number",
      "description": "Total IVA"
    },
    "total": {
      "type": "number",
      "description": "Total de la factura"
    },
    "payment_method": {
      "type": "string",
      "description": "M\u00e9todo de pago"
    },
    "status": {
      "type": "string",
      "enum": [
        "emitida",
        "pagada",
        "pendiente",
        "cancelada"
      ],
      "default": "emitida",
      "description": "Estado de la factura"
    },
    "notes": {
      "type": "string",
      "description": "Observaciones"
    }
  },
  "required": [
    "invoice_number",
    "invoice_date",
    "total"
  ]
}