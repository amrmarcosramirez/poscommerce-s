{
  "name": "Sale",
  "type": "object",
  "properties": {
    "sale_number": {
      "type": "string",
      "description": "N\u00famero de venta \u00fanico"
    },
    "store_id": {
      "type": "string",
      "description": "ID de la tienda donde se realiz\u00f3"
    },
    "customer_id": {
      "type": "string",
      "description": "ID del cliente"
    },
    "customer_name": {
      "type": "string",
      "description": "Nombre del cliente"
    },
    "sale_date": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de la venta"
    },
    "items": {
      "type": "array",
      "description": "Productos vendidos",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string"
          },
          "product_name": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "iva_rate": {
            "type": "number"
          },
          "discount": {
            "type": "number",
            "default": 0
          },
          "subtotal": {
            "type": "number"
          }
        }
      }
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal sin IVA"
    },
    "total_iva": {
      "type": "number",
      "description": "Total IVA"
    },
    "discount": {
      "type": "number",
      "default": 0,
      "description": "Descuento aplicado"
    },
    "total": {
      "type": "number",
      "description": "Total de la venta"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "efectivo",
        "tarjeta",
        "bizum",
        "transferencia"
      ],
      "description": "M\u00e9todo de pago"
    },
    "status": {
      "type": "string",
      "enum": [
        "completada",
        "pendiente",
        "cancelada",
        "devuelta"
      ],
      "default": "completada",
      "description": "Estado de la venta"
    },
    "channel": {
      "type": "string",
      "enum": [
        "tienda_fisica",
        "ecommerce"
      ],
      "default": "tienda_fisica",
      "description": "Canal de venta"
    },
    "notes": {
      "type": "string",
      "description": "Notas de la venta"
    },
    "invoice_id": {
      "type": "string",
      "description": "ID de la factura asociada"
    }
  },
  "required": [
    "sale_number",
    "sale_date",
    "total",
    "payment_method"
  ]
}